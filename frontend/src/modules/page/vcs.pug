mixin chartBlock(id)
	div(data-chart=id style="height: 250px")

//====mixin==========
//===========HTML====

div.page-vcs(style="display: none")
	.row
		.col-12
			.card.my-2
				.card-body
					.head.d-flex.justify-content-between
						h4.card-title(data-i18n="title_vcs") Version Control System
						a#btnExportGit.text-accent-color.link-share(href="javascript:;")
							span Export CSV
							span.ion-archive.ml-2
					.card-text
						+chartBlock("vcs")
